<%- include('../layouts/header.ejs') -%>
<main class="main">
  <div class="page-header breadcrumb-wrap">
    <div class="container">
      <div class="breadcrumb">
        <a href="index.html" rel="nofollow">Home</a>
        <span></span> Pages
        <span></span> Forgot Password
      </div>
    </div>
  </div>
  <section class="pt-150 pb-150">
    <div class="container">
      <div class="row justify-content-center"> <!-- Center the content -->
        <div class="col-lg-5">
          <div class="login_wrap widget-taber-content p-30 background-white border-radius-10 mb-md-5 mb-lg-0 mb-sm-5">
            <div class="padding_eight_all bg-white">
              <div class="heading_s1 text-center"> <!-- Center the heading -->
                <h3 class="mb-30">Forgot Password</h3>
              </div>
              <form method="post" action="/forgetPassEmaiVerify">
                <% if (typeof message !== "undefined") { %>
                 <p style="color: red; margin-bottom: 8px;"><%= message %></p>
                <% } %>
                <div class="form-group">
                  <input type="email" required name="email" placeholder="Your Email">
                </div>
                <div class="form-group text-center"> <!-- Center the button -->
                  <button type="submit" class="btn btn-fill-out btn-block hover-up" name="forgotPassword">Send Reset Link</button>
                </div>
              </form>
              <p class="text-center mt-20">Remembered your password? <a href="/login">Login here</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<%- include('../layouts/footer.ejs') -%>
